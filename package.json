    "moment": "^2.30.1",
    "ora": "^8.2.0",
    "request-promise": "^4.2.6",
    "socks-proxy-agent": "^8.0.5",
    "zod": "^3.24.4",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/async": "^3.2.24",
